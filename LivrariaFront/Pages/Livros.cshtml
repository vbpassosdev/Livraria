@page
@model LivrosModel

<h2>Lista de Livros</h2>

@if (Model.Livros == null || !Model.Livros.Any())
{
    <p>Nenhum livro encontrado.</p>
}
else
{
    <ul>
        @foreach (var livro in Model.Livros)
        {
            <li><strong>@livro.Titulo</strong> - @livro.Autor</li>
        }
    </ul>
}
